<?xml version="1.0"?>
<launch>
    <arg name="map" default="$(find robile_ros_navigation)/map/empty.yaml"/>

    <node name="map_server" pkg="map_server" type="map_server" args="$(arg map)"/>
    <include file="$(find robile_ros_navigation)/launch/amcl.launch"/>
    	
    <!-- for moving -->
    <node pkg="move_base" type="move_base" respawn="false" name="move_base_node" output="screen">
        <!-- Load common configuration files -->
        <rosparam file="$(find robile_ros_navigation)/config/move_base_params.yaml" command="load" />
        <rosparam file="$(find robile_ros_navigation)/config/costmap_common_params.yaml" command="load" ns="global_costmap" />
        <rosparam file="$(find robile_ros_navigation)/config/costmap_common_params.yaml" command="load" ns="local_costmap" />

        <!-- Load global navigation specific parameters -->
        <rosparam file="$(find robile_ros_navigation)/config/local_costmap_params.yaml" command="load" />
        <rosparam file="$(find robile_ros_navigation)/config/global_costmap_params.yaml" command="load" />
        <rosparam file="$(find robile_ros_navigation)/config/base_local_planner_params.yaml" command="load" />
    </node>
</launch>
